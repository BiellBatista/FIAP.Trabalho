@page
@model MasterChef.WebApp.Pages.EditReceitaModel

@{
    ViewData["Title"] = "EditReceita";
}

<h1>EditReceita</h1>

<h4>Receita</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Receita.Id" />
            <div class="form-group">
                <label asp-for="Receita.Titulo" class="control-label"></label>
                <input asp-for="Receita.Titulo" class="form-control" />
                <span asp-validation-for="Receita.Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Receita.Descricao" class="control-label"></label>
                <input asp-for="Receita.Descricao" class="form-control" />
                <span asp-validation-for="Receita.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Receita.Ingredientes" class="control-label"></label>
                <input asp-for="Receita.Ingredientes" class="form-control" />
                <span asp-validation-for="Receita.Ingredientes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Receita.ModoPreparo" class="control-label"></label>
                <input asp-for="Receita.ModoPreparo" class="form-control" />
                <span asp-validation-for="Receita.ModoPreparo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Receita.Foto" class="control-label"></label>
                <input asp-for="Receita.Foto" class="form-control" />
                <span asp-validation-for="Receita.Foto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Receita.Tags" class="control-label"></label>
                <input asp-for="Receita.Tags" class="form-control" />
                <span asp-validation-for="Receita.Tags" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Receita.CategoriaId" class="control-label"></label>
                <select asp-for="Receita.CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                <span asp-validation-for="Receita.CategoriaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./ListReceitas">Back to List</a>
</div>

